pkgname=wikiquote-movie-fortune
pkgver=2.0
pkgrel=1
pkgdesc="Generate fortune cookies from Wikiquote for movies"
arch=('any')
url="https://github.com/therealpsv/wikiquote-movie-fortune"
license=('GPL3')
depends=('python' 'wget')
makedepends=('coreutils' 'make' 'texinfo')
source=(https://github.com/therealpsv/wikiquote-movie-fortune/archive/${pkgver}.tar.gz)
sha256sums=(8bff426c4c1e5bb2a4254c87bdd74e037ba8944124fc540d94a3174bf626e8f6)


build() {
  cd "${srcdir}/wikiquote-movie-fortune-${pkgver}"
  make
}


package() {
  cd "${srcdir}/wikiquote-movie-fortune-${pkgver}"
  make install DESTDIR="${pkgdir}"
}

