pkgname=wikiquote-movie-fortune
pkgver=2.0
pkgrel=1
pkgdesc="Generate fortune cookies from Wikiquote for movies"
arch=('any')
url="https://github.com/therealpsv/wikiquote-movie-fortune"
license=('GPL3')
depends=('python' 'wget')
makedepends=('coreutils' 'make' 'texinfo')
source=(git://github.com/TheRealPSV/wikiquote-movie-fortune.git)
sha256sums=('SKIP')


build() {
  cd "${srcdir}/wikiquote-movie-fortune"
  make
}


package() {
  cd "${srcdir}/wikiquote-movie-fortune"
  make install DESTDIR="${pkgdir}"
}
